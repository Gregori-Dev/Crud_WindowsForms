@model List<Crud.Domain.DadosUsuario>
@{
    ViewData["Title"] = "Usuarios";
}

<!DOCTYPE html>

<html lang="en">

<head>
    <title>CrudMVC</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    h1 {
        font-family: 'Brush Script MT', cursive;
    }

    body {
        background-color: rgb(230, 255, 255);
    }
</style>
<body>

    <div class="container mt-3">
        <h1>MENU</h1>

        <table class="table table-info table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Nome
                    </th>
                    <th>
                        Idade
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.IdClientes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeClientes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdadeClientes)
                        </td>
                        <td>
                            <a asp-action="Deletar" class="btn btn-danger" asp-route-id="@item.IdClientes">Deletar</a>
                            <a asp-action="Editar" class="btn btn-info" asp-route-id="@item.IdClientes">Editar</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="col-lg-12" style="text-align: right;">
        <a asp-action="Cadastrar" class="btn btn-success">Cadastrar</a>
    </div>
    

</body>
</html>

