@model Crud.Domain.DadosUsuario
@{
    ViewData["Title"] = "Cadastrar";
}
<style>
    h1 {
        font-family: 'Brush Script MT', cursive;
    }

    body {
        background-color: rgb(230, 255, 255);
    }
</style>
<h1>Cadastrar</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label> Nome</label>
                <input asp-for="NomeClientes" class="form-control" />
                <span asp-validation-for="NomeClientes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Idade</label>
                <input asp-for="IdadeClientes" class="form-control" />
                <span asp-validation-for="IdadeClientes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <a asp-action="InicioCadastro" class="btn btn-info">Retornar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}